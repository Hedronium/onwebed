extends base.pug

block content
    div.container
        div#intro
            div.columns.is-multiline
                div.column.is-4-desktop.one.is-5-tablet
                    div.window
                        div.level
                            div.level-left
                                span.dot(style="background:#ED594A;")
                                span.dot(style="background:#FDD800;")
                                span.dot(style="background:#5AC05A;")

                        div.content
                            div.solid_box
                                span.label.
                                    html

                                div.solid_box
                                    span.label.
                                        head
                                    div.liquid_box
                                        span.label.
                                            title
                                        span.
                                            Hello!

                                div.liquid_box
                                    span.label.
                                        body p
                                    span.
                                        Welcome my liege!

                div.column.transition.one.is-auto
                    i.fas.fa-arrow-down
                    i.fas.fa-arrow-right

                div.column.is-4-desktop.two.is-5-tablet
                    div.window
                        div.level
                            div.level-left
                                span.dot(style="background:#ED594A;")
                                span.dot(style="background:#FDD800;")
                                span.dot(style="background:#5AC05A;")

                        div.content
                            pre
                                code.html.
                                    &#x3C;html&#x3E;
                                        &#x3C;head&#x3E;
                                           &#x3C;title&#x3E;Hello!&#x3C;/title&#x3E;
                                        &#x3C;/head&#x3E;
                                        &#x3C;body&#x3E;
                                           &#x3C;p&#x3E;Welcome my liege!&#x3C;/p&#x3E;
                                        &#x3C;/body&#x3E;
                                    &#x3C;/html&#x3E;

                div.column.transition.two.is-1-desktop.is-full-tablet.is-auto
                    i.fas.fa-arrow-down
                    i.fas.fa-arrow-right

                div.column.is-2-desktop.three.is-full-tablet
                    div.window
                        div.level
                            div.level-left
                                span.dot(style="background:#ED594A;")
                                span.dot(style="background:#FDD800;")
                                span.dot(style="background:#5AC05A;")

                                span(style="margin-left: 0.5em") Hello!
                        div.content.
                            Welcome my liege!

        hr

        section.section.about
            h2.subtitle.
                Code HTML in a visual way!
